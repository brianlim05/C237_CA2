<!-- Zhi Shan's EJS -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Borrow List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<!-- Navbar -->
<%- include('share/navbar') %>
  <!-- List Content -->
  <div class="container">
    <h2 class="mt-4">Borrowing List</h2>
    <% if (list.length === 0) { %>
      <p>Your borrow list is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < list.length; i++) { %>
            <tr>
                <td><%= list[i].itemName %></td>
                <td><img src="/images/<%= list[i].image %>" width="80" class="img-thumbnail"></td>
                <td><%= list[i].quantity %></td>
                <td>$<%= (list[i].price * list[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += list[i].price * list[i].quantity; %>
          <% }; %>
        </tbody>
      </table>
      <h4>Total: $<%= total.toFixed(2) %></h4>
      <h5>Return Date: <%= returnDate %></h5>

      <div class="d-flex justify-content-between mt-4">
        <a href="/borrowing" class="btn btn-secondary">Back to Inventory List</a>
        <a href="/checkout" class="btn btn-secondary">Check Out</a>
      </div>     
      
    <% } %>
  </div>
</body>
</html>