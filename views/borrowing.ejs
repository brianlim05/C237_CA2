<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Inventory Tracker App/<title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Inventory Tracker App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/borrowList">View Borrow List</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <br>
        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(error) { %>
                    <p><%= error %></p>
                <% }); %>
            </div>
        <% } %>  
    <div class="text-center"><h2>Items from Inventory</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Item Name</th>
            <th width="100">Item Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width="50">Quantity</th>
            <th width="50">Borrow</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < items.length; i++) { %>
          <tr>
            <td><a href="/item/<%= items[i].itemId %>" ><%= items[i].itemName %></a></td>
            <td><img src = "images/<%= items[i].image %>" width="20%"></td>
            <td><%= items[i].quantity %></td>
            <td>$<%= items[i].price.toFixed(2) %></td>

            <td>
              <select class="form-control" onchange="document.getElementById('quantity-<%= items[i].itemId %>').value = this.value">
                <% for (let q = 1; q <= 5; q++) { %>
                  <option value="<%= q %>"><%= q %></option>
                <% } %>
              </select>
            </td>

            <td>
                <form action="/add-to-list/<%= items[i].itemId %>" method="POST">
                  <input type="hidden" name="quantity" id="quantity-<%= items[i].itemId %>" value="1">
                  <button type="submit" class="btn btn-primary mt-3">Borrow</button>
                </form>
            </td>

          </tr>
        <% } %>
        
      </tbody>
    </table>
  </div>
</body>
</html>
